nextflow_process {

    name "Test Process AMPCOMBI"
    script "../main.nf"
    process "AMPCOMBI"

    tag "modules"
    tag "modules_nfcore"
    tag "ampcombi"

    test("sample_1 [faa]") {

        when {
            process {
                """
                input[0] = [[],[]]
                input[1] = file('https://github.com/nf-core/test-datasets/raw/modules/data/delete_me/ampcombi/test_faa/sample_1.faa', checkIfExists: true)
                input[2] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sample_1 [faa] - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [[],[]]
                input[1] = file('https://github.com/nf-core/test-datasets/raw/modules/data/delete_me/ampcombi/test_faa/sample_1.faa', checkIfExists: true)
                input[2] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
