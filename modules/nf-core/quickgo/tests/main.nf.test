nextflow_process {

    name "Test Process QUICKGO"
    script "../main.nf"
    process "QUICKGO"

    tag "modules"
    tag "modules_nfcore"
    tag "quickgo"

    test("quickgo - txt") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test'], 
                    file('${projectDir}/genes.txt', checkIfExists: true)
                    ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.tsv).match("tsv") },
                { assert snapshot(process.out.versions).match("versions") }
            )
        }
    }
}
