nextflow_process {

    name "Test Process BBMAP_BBNORM"
    script "modules/nf-core/bbmap/bbnorm/main.nf"
    process "BBMAP_BBNORM"
    config "tests/modules/nf-core/bbmap_bbnorm/nextflow.config"
    tag "bbmap_bbnorm"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                // define inputs of the process here. Example:
                // input[0] = file("test-file.txt")
                """
            }
        }

        then {
            // Assert that the process ran successfully
            assert process.success
            // Assert that the process produced the expected output
            assert snapshot(path(params.outdir).list()).match()
        }

    }

}
