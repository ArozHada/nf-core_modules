nextflow_process {

    name "Test Process BAMTOOLS_STATS"
    script "modules/nf-core/bamtools/stats/main.nf"
    process "BAMTOOLS_STATS"
    config "tests/modules/nf-core/bamtools/stats/nextflow.config"
    tag "bamtools_stats"

    test("Sarscov2 Illumina PE Sorted BAM") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test', single_end:false ], // meta map
                            file(params.test_data['sarscov2']['illumina']['test_paired_end_bam'], checkIfExists: true)
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
