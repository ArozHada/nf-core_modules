nextflow_process {

    name "Test Process MOBSUITE_RECON"
    script "modules/nf-core/mobsuite/recon/main.nf"
    process "MOBSUITE_RECON"
    config "tests/modules/nf-core/mobsuite_recon/nextflow.config"
    tag "mobsuite_recon"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                // define inputs of the process here. Example:
                // input[0] = file("test-file.txt")
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
