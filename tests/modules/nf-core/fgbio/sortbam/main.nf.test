nextflow_process {

    name "Test Process FGBIO_SORTBAM"
    script "modules/nf-core/fgbio/sortbam/main.nf"
    process "FGBIO_SORTBAM"
    config "tests/modules/nf-core/fgbio_sortbam/nextflow.config"
    tag "fgbio_sortbam"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                // define inputs of the process here. Example:
                // input[0] = file("test-file.txt")
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
