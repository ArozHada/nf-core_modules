nextflow_process {

    name "Test Process ARIBA_GETREF"
    script "modules/nf-core/ariba/getref/main.nf"
    process "ARIBA_GETREF"
    config "tests/modules/nf-core/ariba/getref/nextflow.config"
    tag "ariba_getref"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = "card"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path("$outputDir/ariba/versions.yml")).match() },
                { assert new File("$outputDir/ariba/card.tar.gz").exists() }
            )
        }

    }

}
