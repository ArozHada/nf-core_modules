nextflow_process {

    name "Test Process BAMALIGNCLEANER"
    script "modules/nf-core/bamaligncleaner/main.nf"
    process "BAMALIGNCLEANER"
    config "tests/modules/nf-core/bamaligncleaner/nextflow.config"
    tag "bamaligncleaner"

    test("Sarscov2 Illumina SE Sorted BAM") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test', single_end:false ], // meta map
                             file(params.test_data['sarscov2']['illumina']['test_single_end_sorted_bam'], checkIfExists: true) 
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
