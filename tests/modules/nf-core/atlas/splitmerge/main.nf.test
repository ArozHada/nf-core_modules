nextflow_process {

    name "Test Process ATLAS_SPLITMERGE"
    script "modules/nf-core/atlas/splitmerge/main.nf"
    process "ATLAS_SPLITMERGE"
    config "tests/modules/nf-core/atlas/splitmerge/nextflow.config"
    tag "atlas_splitmerge"

    test("Human Illumina PE Sorted BAM") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test', single_end:false ],
                             file(params.test_data['homo_sapiens']['illumina']['test_paired_end_sorted_bam'], checkIfExists: true),
                             file(params.test_data['homo_sapiens']['illumina']['test_paired_end_sorted_bam_bai'], checkIfExists: true),
                             file(params.test_data['homo_sapiens']['illumina']['read_group_settings_txt'], checkIfExists: true),
                             []
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path("$outputDir/atlas/versions.yml"),
                                  path("$outputDir/atlas/test.paired_end.sorted_ignoredReads.txt.gz")).match() },
                { assert new File("$outputDir/atlas/test.paired_end.sorted_mergedReads.bam").exists() }
            )
        }

    }

}
