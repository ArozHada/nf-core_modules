nextflow_process {

    name "Test Process ATLAS_RECAL"
    script "modules/nf-core/atlas/recal/main.nf"
    process "ATLAS_RECAL"
    config "tests/modules/nf-core/atlas/recal/nextflow.config"
    tag "atlas_recal"

    test("Human Illumina PE Sorted BAM") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test', single_end:false ], // meta map
                            file(params.test_data['homo_sapiens']['illumina']['test_paired_end_sorted_bam'], checkIfExists: true),
                            file(params.test_data['homo_sapiens']['illumina']['test_paired_end_sorted_bam_bai'], checkIfExists: true),
                            [],
                            []
                           ]
                input[1] = []
                input[2] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
