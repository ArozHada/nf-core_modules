nextflow_process {

    name "Test Process PURGEDUPS_PBCSTAT"
    script "modules/nf-core/purgedups/pbcstat/main.nf"
    process "PURGEDUPS_PBCSTAT"
    config "tests/modules/nf-core/purgedups_pbcstat/nextflow.config"
    tag "purgedups_pbcstat"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                // define inputs of the process here. Example:
                // input[0] = file("test-file.txt")
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
