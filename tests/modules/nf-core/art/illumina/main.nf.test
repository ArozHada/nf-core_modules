nextflow_process {

    name "Test Process ART_ILLUMINA"
    script "modules/nf-core/art/illumina/main.nf"
    process "ART_ILLUMINA"
    config "tests/modules/nf-core/art/illumina/nextflow.config"
    tag "art_illumina"

    test("Sarscov2 Genome Fasta") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id: 'test'], // meta map
                             file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true) 
                           ]

                input[1] = 'HS25'
                input[2] = '15'
                input[3] = '150'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path("$outputDir/art/versions.yml")).match() },
                { assert new File("$outputDir/art/test.aln").exists() },
                { assert new File("$outputDir/art/test.fq.gz").exists() }
            )
        }

    }

}
