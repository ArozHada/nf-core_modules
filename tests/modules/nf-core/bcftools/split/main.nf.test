nextflow_process {

    name "Test Process BCFTOOLS_SPLIT"
    script "modules/nf-core/bcftools/split/main.nf"
    process "BCFTOOLS_SPLIT"
    config "tests/modules/nf-core/bcftools/split/nextflow.config"
    tag "bcftools_split"

    test("Human Illumina VCF") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test', single_end:false ], // meta map
                            file(params.test_data['homo_sapiens']['illumina']['test_genome_vcf_gz'], checkIfExists: true),
                            file(params.test_data['homo_sapiens']['illumina']['test_genome_vcf_gz_tbi'], checkIfExists: true)
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path("$outputDir/bcftools/test.chr22.vcf.gz").linesGzip[95-226],
                                  path("$outputDir/bcftools/versions.yml")).match() }
            )
        }
    }
}
