nextflow_process {

    name "Test Process BCFTOOLS_FILTER"
    script "modules/nf-core/bcftools/filter/main.nf"
    process "BCFTOOLS_FILTER"
    config "tests/modules/nf-core/bcftools/filter/nextflow.config"
    tag "bcftools_filter"

    test("Sarscov2 Illumina VCF") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test' ], // meta map
                             [ file(params.test_data['sarscov2']['illumina']['test_vcf'], checkIfExists: true) ]
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
