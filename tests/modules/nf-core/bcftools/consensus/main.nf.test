nextflow_process {

    name "Test Process BCFTOOLS_CONSENSUS"
    script "modules/nf-core/bcftools/consensus/main.nf"
    process "BCFTOOLS_CONSENSUS"
    config "tests/modules/nf-core/bcftools/consensus/nextflow.config"
    tag "bcftools_consensus"

    test("Sarscov2 Illumina VCF Genome Fasta") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test' ], // meta map
                            file(params.test_data['sarscov2']['illumina']['test_vcf_gz'], checkIfExists: true),
                            file(params.test_data['sarscov2']['illumina']['test_vcf_gz_tbi'], checkIfExists: true),
                            file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }
    }
}
