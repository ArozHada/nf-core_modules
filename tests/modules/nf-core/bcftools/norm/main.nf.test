nextflow_process {

    name "Test Process BCFTOOLS_NORM"
    script "modules/nf-core/bcftools/norm/main.nf"
    process "BCFTOOLS_NORM"
    config "tests/modules/nf-core/bcftools/norm/nextflow.config"
    tag "bcftools_norm"

    test("Sarscov2 Illumina VCF") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test2', single_end:false ], // meta map
                            file(params.test_data['sarscov2']['illumina']['test_vcf_gz'], checkIfExists: true),
                            []
                           ]
                input[1] = file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match("no_tbi") }
            )
        }
    }

    test("Sarscov2 Illumina VCF TBI") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test2', single_end:false ], // meta map
                             file(params.test_data['sarscov2']['illumina']['test_vcf_gz'], checkIfExists: true),
                             file(params.test_data['sarscov2']['illumina']['test_vcf_gz_tbi'], checkIfExists: true)
                           ]
                input[1] = file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match("with_tbi") }
            )
        }
    }
}
