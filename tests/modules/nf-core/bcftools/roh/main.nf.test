nextflow_process {

    name "Test Process BCFTOOLS_ROH"
    script "modules/nf-core/bcftools/roh/main.nf"
    process "BCFTOOLS_ROH"
    config "tests/modules/nf-core/bcftools/roh/nextflow.config"
    tag "bcftools_roh"

    test("Sarscov2 Illumina VCF") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test' ], // meta map
                             file(params.test_data['sarscov2']['illumina']['test_vcf_gz'], checkIfExists: true),
                             file(params.test_data['sarscov2']['illumina']['test_vcf_gz_tbi'], checkIfExists: true)
                           ]
                input[1] = [[],[]]
                input[2] = []
                input[3] = []
                input[4] = []
                input[5] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }
    }
}
