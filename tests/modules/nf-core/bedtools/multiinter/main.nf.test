nextflow_process {

    name "Test Process BEDTOOLS_MULTIINTER"
    script "modules/nf-core/bedtools/multiinter/main.nf"
    process "BEDTOOLS_MULTIINTER"
    config "tests/modules/nf-core/bedtools/multiinter/nextflow.config"
    tag "bedtools_multiinter"

    test("Sarscov2 Genome BED") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test', single_end:false ], // meta map
                            [
                              file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true),
                              file(params.test_data['sarscov2']['genome']['test2_bed'], checkIfExists: true)
                            ]
                           ]
                input[1] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match("bed") }
            )
        }
    }

    test("Sarscov2 Genome BED With Sizes") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test', single_end:false ], // meta map
                            [
                              file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true),
                              file(params.test_data['sarscov2']['genome']['test2_bed'], checkIfExists: true)
                            ]
                           ]
                input[1] = file(params.test_data['sarscov2']['genome']['genome_sizes'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match("bed_sizes") }
            )
        }
    }
}
