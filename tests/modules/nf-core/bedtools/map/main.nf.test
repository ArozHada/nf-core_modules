nextflow_process {

    name "Test Process BEDTOOLS_MAP"
    script "modules/nf-core/bedtools/map/main.nf"
    process "BEDTOOLS_MAP"
    config "tests/modules/nf-core/bedtools/map/nextflow.config"
    tag "bedtools_map"

    test("Sarscov2 Genome BED") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test' ],
                            file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true),
                            file(params.test_data['sarscov2']['genome']['test2_bed'], checkIfExists: true)
                           ]
                input[1] = [[:],[]]           
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match("bed")
        }
    }

    test("Sarscov2 Genome VCF") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test' ],
                            file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true),
                            file(params.test_data['sarscov2']['illumina']['test_vcf'], checkIfExists: true)
                           ]
                input[1] = [[:],[]]           
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match("vcf")
        }
    }
}
