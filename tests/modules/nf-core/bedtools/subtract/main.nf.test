nextflow_process {

    name "Test Process BEDTOOLS_SUBTRACT"
    script "modules/nf-core/bedtools/subtract/main.nf"
    process "BEDTOOLS_SUBTRACT"
    config "tests/modules/nf-core/bedtools/subtract/nextflow.config"
    tag "bedtools_subtract"

    test("Sarscov2 Genome BED & Baits BED") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test_subtract' ],
                            file(params.test_data['sarscov2']['genome']['baits_bed'], checkIfExists: true),
                            file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true)
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }
    }
}
