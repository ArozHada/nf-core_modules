nextflow_process {

    name "Test Process BEDTOOLS_MAKEWINDOWS"
    script "modules/nf-core/bedtools/makewindows/main.nf"
    process "BEDTOOLS_MAKEWINDOWS"
    config "tests/modules/nf-core/bedtools/makewindows/nextflow.config"
    tag "bedtools_makewindows"

    test("Sarscov2 Genome BED") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test2'],
                            file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true)
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match("bed") }
            )
        }
    }

    test("Sarscov2 Genome Fasta") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test2'],
                            file(params.test_data['sarscov2']['genome']['genome_fasta_fai'], checkIfExists: true)
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match("fasta") }
            )
        }
    }
}
