nextflow_process {

    name "Test Process BEDTOOLS_MERGE"
    script "modules/nf-core/bedtools/merge/main.nf"
    process "BEDTOOLS_MERGE"
    config "tests/modules/nf-core/bedtools/merge/nextflow.config"
    tag "bedtools_merge"

    test("Sarscov2 Genome BED") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test'],
                            file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true)
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }
    }
}
