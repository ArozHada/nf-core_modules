nextflow_process {

    name "Test Process BEDTOOLS_SLOP"
    script "modules/nf-core/bedtools/slop/main.nf"
    process "BEDTOOLS_SLOP"
    config "tests/modules/nf-core/bedtools/slop/nextflow.config"
    tag "bedtools_slop"

    test("Sarscov2 Genome BED") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test'],
                             file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true)
                           ]
                input[1] = file(params.test_data['sarscov2']['genome']['genome_sizes'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }
    }
}
