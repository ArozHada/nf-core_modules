nextflow_process {

    name "Test Process BEDTOOLS_BAMTOBED"
    script "modules/nf-core/bedtools/bamtobed/main.nf"
    process "BEDTOOLS_BAMTOBED"
    config "tests/modules/nf-core/bedtools/bamtobed/nextflow.config"
    tag "bedtools_bamtobed"

    test("Sarscov2 Illumina SE BAM") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test'], //meta map
                             file(params.test_data['sarscov2']['illumina']['test_single_end_bam'], checkIfExists: true)
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }
    }
}
