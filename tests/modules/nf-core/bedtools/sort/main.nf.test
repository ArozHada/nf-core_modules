nextflow_process {

    name "Test Process BEDTOOLS_SORT"
    script "modules/nf-core/bedtools/sort/main.nf"
    process "BEDTOOLS_SORT"
    config "tests/modules/nf-core/bedtools/sort/nextflow.config"
    tag "bedtools_sort"

    test("Sarscov2 Genome BED") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test'],
                            file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true)
                           ]
                input[1] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match("bed") }
            )
        }
    }

    test("Sarscov2 Genome BED With Genome") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test'],
                            file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true)
                           ]
                input[1] = Channel.of(file(params.test_data['sarscov2']['genome']['genome_fasta_fai'], checkIfExists: true))
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match("bed_genome") }
            )
        }
    }
}
