nextflow_process {

    name "Test Process BEDTOOLS_GETFASTA"
    script "modules/nf-core/bedtools/getfasta/main.nf"
    process "BEDTOOLS_GETFASTA"
    config "tests/modules/nf-core/bedtools/getfasta/nextflow.config"
    tag "bedtools_getfasta"

    test("Sarscov2 Illumina Genome BED") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true)
                input[1] = file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }
    }
}
