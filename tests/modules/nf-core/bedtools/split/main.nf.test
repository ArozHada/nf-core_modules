nextflow_process {

    name "Test Process BEDTOOLS_SPLIT"
    script "modules/nf-core/bedtools/split/main.nf"
    process "BEDTOOLS_SPLIT"
    config "tests/modules/nf-core/bedtools/split/nextflow.config"
    tag "bedtools_split"

    test("Human genome Multi Interval BED") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test' ], // meta map
                            file(params.test_data['homo_sapiens']['genome']['genome_multi_interval_bed'], checkIfExists: true),
                            2
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }
    }
}
