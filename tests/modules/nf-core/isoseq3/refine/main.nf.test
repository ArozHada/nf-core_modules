nextflow_process {

    name "Test Process ISOSEQ3_REFINE"
    script "modules/nf-core/isoseq3/refine/main.nf"
    process "ISOSEQ3_REFINE"
    config "tests/modules/nf-core/isoseq3_refine/nextflow.config"
    tag "isoseq3_refine"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                // define inputs of the process here. Example:
                // input[0] = file("test-file.txt")
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
