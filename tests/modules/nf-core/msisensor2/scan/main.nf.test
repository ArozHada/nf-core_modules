nextflow_process {

    name "Test Process MSISENSOR2_SCAN"
    script "modules/nf-core/msisensor2/scan/main.nf"
    process "MSISENSOR2_SCAN"
    config "tests/modules/nf-core/msisensor2_scan/nextflow.config"
    tag "msisensor2_scan"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                // define inputs of the process here. Example:
                // input[0] = file("test-file.txt")
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
