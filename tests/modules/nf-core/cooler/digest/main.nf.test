nextflow_process {

    name "Test Process COOLER_DIGEST"
    script "modules/nf-core/cooler/digest/main.nf"
    process "COOLER_DIGEST"
    config "tests/modules/nf-core/cooler_digest/nextflow.config"
    tag "cooler_digest"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                // define inputs of the process here. Example:
                // input[0] = file("test-file.txt")
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
