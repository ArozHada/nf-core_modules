nextflow_process {

    name "Test Process SEQKIT_PAIR"
    script "modules/nf-core/seqkit/pair/main.nf"
    process "SEQKIT_PAIR"
    config "tests/modules/nf-core/seqkit_pair/nextflow.config"
    tag "seqkit_pair"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                // define inputs of the process here. Example:
                // input[0] = file("test-file.txt")
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
