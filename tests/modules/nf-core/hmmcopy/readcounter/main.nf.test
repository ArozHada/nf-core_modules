nextflow_process {

    name "Test Process HMMCOPY_READCOUNTER"
    script "modules/nf-core/hmmcopy/readcounter/main.nf"
    process "HMMCOPY_READCOUNTER"
    config "tests/modules/nf-core/hmmcopy_readcounter/nextflow.config"
    tag "hmmcopy_readcounter"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                // define inputs of the process here. Example:
                // input[0] = file("test-file.txt")
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
