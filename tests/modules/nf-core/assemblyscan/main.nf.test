nextflow_process {

    name "Test Process ASSEMBLYSCAN"
    script "modules/nf-core/assemblyscan/main.nf"
    process "ASSEMBLYSCAN"
    config "tests/modules/nf-core/assemblyscan/nextflow.config"
    tag "assemblyscan"

    test("Sarscov2 Genome Fasta") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test', single_end:false ], // meta map
                             file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true) 
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
