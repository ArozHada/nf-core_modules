nextflow_process {

    name "Test Process SAMTOOLS_STATS"
    script "modules/nf-core/samtools/stats/main.nf"
    process "SAMTOOLS_STATS"
    config "tests/modules/nf-core/samtools_stats/nextflow.config"
    tag "samtools_stats"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                // define inputs of the process here. Example:
                // input[0] = file("test-file.txt")
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
