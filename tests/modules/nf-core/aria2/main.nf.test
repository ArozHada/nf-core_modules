nextflow_process {

    name "Test Process ARIA2"
    script "modules/nf-core/aria2/main.nf"
    process "ARIA2"
    config "tests/modules/nf-core/aria2/nextflow.config"
    tag "aria2"

    test("Sarscov2 Illumina SE BAM") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = params.test_data['sarscov2']['illumina']['test_single_end_bam']
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
