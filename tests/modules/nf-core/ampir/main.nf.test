nextflow_process {

    name "Test Process AMPIR"
    script "modules/nf-core/ampir/main.nf"
    process "AMPIR"
    config "tests/modules/nf-core/ampir/nextflow.config"
    tag "ampir"

    test("Candidatus Portiera Aleyrodidarum Proteome Fasta") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test', single_end:false ], // meta map
                               file(params.test_data['candidatus_portiera_aleyrodidarum']['genome']['proteome_fasta'], checkIfExists: true),
                           ]
                input[1] = "precursor"
                input[2] = []
                input[3] = "0.7"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }
    }

}
