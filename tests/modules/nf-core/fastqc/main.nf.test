nextflow_process {

    name "Test Process FASTQC"
    script "modules/nf-core/fastqc/main.nf"
    config "tests/modules/nf-core/fastqc/nextflow.config"
    process "FASTQC"
    tag "fastqc"

    test("Single-Read") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                    [ id: 'test', single_end:true ],
                    [
                        file(params.test_data['sarscov2']['illumina']['test_1_fastq_gz'], checkIfExists: true)
                    ]
                ]
                """
            }
        }

        then {
            assert process.success

            assert snapshot(
                            path("$outputDir/fastqc/test_fastqc.html"),
                            path("$outputDir/fastqc/versions.yml")
                           ).match("single_read")

            assert new File("$outputDir/fastqc/test_fastqc.zip").exists()
        }

    }

}
