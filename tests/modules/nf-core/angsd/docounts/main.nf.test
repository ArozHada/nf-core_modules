nextflow_process {

    name "Test Process ANGSD_DOCOUNTS"
    script "modules/nf-core/angsd/docounts/main.nf"
    process "ANGSD_DOCOUNTS"
    config "tests/modules/nf-core/angsd/docounts/nextflow.config"
    tag "angsd_docounts"

    test("Human Illumina PE Sorted BAM") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'test', single_end:false ], // meta map
                            file(params.test_data['homo_sapiens']['illumina']['test_paired_end_markduplicates_sorted_bam'], checkIfExists: true),
                            file(params.test_data['homo_sapiens']['illumina']['test_paired_end_markduplicates_sorted_bam_bai'], checkIfExists: true),
                            []
                        ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
