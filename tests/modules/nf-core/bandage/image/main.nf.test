nextflow_process {

    name "Test Process BANDAGE_IMAGE"
    script "modules/nf-core/bandage/image/main.nf"
    process "BANDAGE_IMAGE"
    config "tests/modules/nf-core/bandage/image/nextflow.config"
    tag "bandage_image"

    test("Sarscov2 Illumina Assembly GFA") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'B-3106' ], // meta map
                            file( params.test_data['sarscov2']['illumina']['assembly_gfa'], checkIfExists: true)
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path("$outputDir/bandage/versions.yml")).match() },
                { assert new File("$outputDir/bandage/B-3106.png").exists() },
                { assert new File("$outputDir/bandage/B-3106.svg").exists() }
            )
        }

    }

}
