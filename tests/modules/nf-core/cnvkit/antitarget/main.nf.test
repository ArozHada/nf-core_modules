nextflow_process {

    name "Test Process CNVKIT_ANTITARGET"
    script "modules/nf-core/cnvkit/antitarget/main.nf"
    process "CNVKIT_ANTITARGET"
    config "tests/modules/nf-core/cnvkit_antitarget/nextflow.config"
    tag "cnvkit_antitarget"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                // define inputs of the process here. Example:
                // input[0] = file("test-file.txt")
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
