nextflow_process {

    name "Test Process BAMUTIL_TRIMBAM"
    script "modules/nf-core/bamutil/trimbam/main.nf"
    process "BAMUTIL_TRIMBAM"
    config "tests/modules/nf-core/bamutil/trimbam/nextflow.config"
    tag "bamutil_trimbam"

    test("Sarscov2 Illumina PE Sorted BAM") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id:'test', single_end:false ], // meta map
                             file(params.test_data['sarscov2']['illumina']['test_paired_end_bam'], checkIfExists: true),
                             2,
                             2
                           ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(params.outdir).list()).match() }
            )
        }

    }

}
