nextflow_process {

    name "Test Process AGAT_SPSTATISTICS"
    script "modules/nf-core/agat/spstatistics/main.nf"
    config "tests/modules/nf-core/agat/spstatistics/nextflow.config"
    process "AGAT_SPSTATISTICS"
    tag "agat_spstatbasic"

    test("test_statistics") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [ [id:'test'], file(params.test_data['sarscov2']['genome']['genome_gff3'], checkIfExists: true) ]
                """
            }
        }

        then {
            // Assert that the process ran successfully
            assert process.success

            assert snapshot(process.out).match("test_statistics")
        }

    }

}
